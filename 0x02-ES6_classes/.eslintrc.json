{
  "env": {
    "browser": false,
    "es6": true,
    "jest": true
  },
  "extends": [
    "airbnb-base",
    "plugin:jest/all"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["jest"],
  "rules": {
    "max-classes-per-file": "off",
    "no-underscore-dangle": "off",
    "no-console": "off",
    "no-shadow": "off",
    "no-restricted-syntax": [
      "error",
      "LabeledStatement",
      "WithStatement"
    ],
    "quotes": ["error", "single"], // Enforce single quotes
    "eol-last": ["error", "always"], // Ensure newline at end of file
    "semi": ["error", "always"], // Enforce semicolons
    "jest/require-hook": "off" // Disable rule if not applicable
  },
  "overrides": [
    {
      "files": ["*.js"],
      "excludedFiles": "babel.config.js"
    }
  ]
}
